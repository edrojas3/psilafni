Bootstrap: docker
From: ubuntu:20.04


%files

MNI152_T1_2mm_brain.nii.gz /opt
MNI152_T1_2mm.nii.gz       /opt
MNI152_T1_2mm_template1.0_SSW.nii.gz /opt
MNI152_T1_2mm_ventricle_mask.nii.gz /opt
NMT_v2.0_sym_05mm_template1.0_SSW.nii.gz /opt
libs/*deb /opt


# install python and other dependencies

%post

apt update && apt-get install -y tzdata keyboard-configuration

ln -sf /usr/share/zoneinfo/America/Mexico /etc/localtime

apt update -y && \
apt install -y curl build-essential software-properties-common python3 \
python3-matplotlib  python3-numpy

add-apt-repository -y ppa:rock-core/qt4
apt-get update
apt-get install -y libqtcore4

mv /opt/*deb .

apt install -y -f  ./libqtassistantclient4_4.6.3-7build1_amd64.deb
apt install -y -f  ./python-pyaudio_0.2.11-1build2_amd64.deb
apt install -y -f  ./python-qt4_4.12.1+dfsg-2_amd64.deb
rm *deb

update-alternatives --install /usr/bin/python python /usr/bin/python3 1
